{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Policy Schema",
  "type": "object",
  "properties": {
    "policies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "resource": {
            "type": "string",
            "enum": ["azure.vm", "azure.disk", "azure.resourcegroup", "azure.storage", "azure.sql", "azure.publicip", "azure.applicationgateway", "azure.nic"]
          },
          "filters": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["last_used", "unattached", "tag", "sku"]
                },
                "days": {
                  "type": "integer",
                  "minimum": 0
                },
                "threshold": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 100
                },
                "key": {
                  "type": "string"
                },
                "value": {
                  "type": "string"
                }
              },
              "required": ["type"]
            }
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["stop", "delete", "update_sku", "scale_dtu", "log"]
                },
                "sku": {
                  "type": "string"
                },
                "tiers": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "enum": ["Basic", "Standard", "Premium"]
                      },
                      "min_dtu": {
                        "type": "integer",
                        "minimum": 0
                      },
                      "max_dtu": {
                        "type": "integer",
                        "minimum": 0
                      },
                      "off_peak_dtu": {
                        "type": "integer"
                      },
                      "peak_dtu": {
                        "type": "integer"
                      },
                      "off_peak_start": {
                        "type": "string",
                        "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
                      },
                      "off_peak_end": {
                        "type": "string",
                        "pattern": "^([01]?[0-9]|2[0-3]):[0-5][0-9]$"
                      }
                    },
                    "required": ["name", "min_dtu", "max_dtu", "off_peak_dtu", "peak_dtu"]
                  }
                },
                "immediate": {
                  "type": "boolean"
                }
              },
              "required": ["type"]
            }
          }
        },
        "required": ["name", "resource", "filters", "actions"]
      }
    }
  },
  "required": ["policies"]
}
